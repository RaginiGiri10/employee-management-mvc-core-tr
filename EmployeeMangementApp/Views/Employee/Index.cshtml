@model IEnumerable<EmployeeDetailsViewModel>


<h1>Employee List</h1>
<hr/>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4">No Records Found!!!</td>
            </tr>
        }

        else
        {
            @foreach (var employee in Model)
            {
    <tr>
        <td>@employee.Id</td>
        <td>@employee.FirstName</td>
        <td>@employee.LasttName</td>
        <td>@employee.DepartmentName</td>
        <td>
            <a asp-controller="Employee" asp-action="UpdateEmployee" asp-route-id="@employee.Id">Edit</a>
        </td>
        <td>
            <a asp-controller="Employee" asp-action="DeleteEmployee" asp-route-id="@employee.Id">Delete</a>
        </td>
    </tr>
            }


        }


    </tbody>

</table>
@model UpdateEmployeeViewModel
<h1>Edit Employee</h1>

<form asp-controller="Employee" asp-action="UpdateEmployee" method="post">

    <div class="form-group">


        <label asp-for="FirstName"></label>
        <input type="text" asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="LasttName"></label>
        <input type="text" asp-for="LasttName" class="form-control" />
        <span asp-validation-for="LasttName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Department</label>
        <select class="form-control" asp-for="DepartmentId" asp-items="@Model.DepartmentList"></select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
